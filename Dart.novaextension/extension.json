{
    "identifier": "sciencefidelity.dart",
    "name": "Dart",
    "organization": "Matt Cook",
    "description": "Dart Language Definition for Nova",
    "version": "0.2.1",
    "categories": ["clips", "completions", "languages"],
    "license": "MIT",
    "repository": "https://github.com/sciencefidelity/Dart.novaextension",
    "bugs": "https://github.com/sciencefidelity/Dart.novaextension/issues",
    "homepage": "https://mattcook.dev",
    "keywords": ["dart", "flutter", "angulardart"],

    "main": "main.dist.js",

    "activationEvents": [
        "onLanguage:dart",
        "onWorkspaceContains:pubspec.yaml"
    ],
    "entitlements": {
        "process": true,
        "filesystem": "readwrite"
    },

    "config": [
      {
          "key": "sciencefidelity.config.dart.analyzerPath",
          "title": "Dart Analyzer Path",
          "description": "Path to the binary snapshotsanalysis_server.dart.snapshot, located in /bin/cache/dart-sdk/bin/snapshots of the flutter folder.",
          "type": "path",
          "placeholder": "/usr/local/flutter/bin/cache/dart-sdk/bin/snapshots"
      },
      {
          "key": "sciencefidelity.enableAnalyzer",
          "title": "Enable Language Server",
          "type": "boolean",
          "default": false
      }
  ]
}
